{
  "name": "voxterm",
  "version": "1.0.0",
  "description": "Share your terminal over the web, with voice control",
  "module": "src/server.ts",
  "type": "module",
  "bin": {
    "voxterm": "src/server-node.ts"
  },
  "scripts": {
    "start": "npx tsx src/server-node.ts",
    "start:tunnel": "npx tsx src/server-node.ts --tunnel",
    "dev": "npx tsx --watch src/server-node.ts",
    "test": "bun run src/test-all.ts"
  },
  "keywords": [
    "terminal",
    "web-terminal",
    "voice",
    "speech-to-text",
    "xterm",
    "pty",
    "cloudflare-tunnel",
    "remote-access",
    "voxterm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/voxterm/voxterm"
  },
  "homepage": "https://github.com/voxterm/voxterm",
  "author": "Jack Huang",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.2.2",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/headless": "^6.0.0",
    "dotenv": "^17.2.4",
    "node-pty": "^1.1.0",
    "ws": "^8.19.0"
  }
}
